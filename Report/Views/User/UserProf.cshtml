
@{
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}
@using Report.Models
@model Report.Models.Utilisateur
<h3 class="alert-success">@TempData["ppok"]</h3>
<div class="col-sm-4"></div>
<div class="col-sm-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="text-center">@Html.DisplayFor(model => model.Pseudo)</h1>
            <h3>Cocher l'activité à attribuer</h3> <br>
        </div>
        <form action="~/User/profil" method="Get">
            <div class="panel-body">
                @foreach (var std in ViewData["cats"] as IList<profile>)
                {
                    <div class="form-check">
                        <input type="hidden" name="idU" value="@Html.DisplayFor(model => model.id)" />
                        <input class="form-check-input" type="radio" value="@std.idProf" name="profil" id="@std.idProf" required>
                        <label class="form-check-label" name="profil" for="@std.idProf">
                            @std.profil
                        </label>
                    </div>
                }

            </div>
            <div class="panel-footer text-center" style="margin-top : 5%;">
                <button class="btn btn-lg btn-primary" type="submit">Enregistrer</button>
            </div>
        </form>
    </div>

    <div class="alert-danger" role="alert">
        @TempData["eror"]
    </div>
</div>
<div class="col-sm-4"></div>